/* Content Components */

/* Main Content Area */
.main-content {
    min-height: 60vh;
    padding: 0 0 3rem;
}

.main-content:has(.homepage) {
    padding-top: 0;
}

/* Hero Section */
.hero {
    text-align: center;
    padding: 5rem 0 4rem;
    background: linear-gradient(135deg, #805ad5 0%, #6b46c1 100%);
    color: white;
    margin-bottom: 3rem;
}

html.dark .hero {
    background: linear-gradient(135deg, #9f7aea 0%, #805ad5 100%);
}

.hero-title {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: white;
}

.hero-subtitle {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    opacity: 0.95;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
}

.hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* Hero with quote overlay */
.hero-with-quote {
    position: relative;
    padding: 0;
    background: transparent;
    margin-bottom: 3rem;
    min-height: 400px;
}

.hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    overflow: hidden;
}

.hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-content {
    position: relative;
    z-index: 2;
    padding: 5rem 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 400px;
}

.hero-quote {
    margin: 0 auto 2rem;
    max-width: 700px;
}

.hero-with-quote .hero-quote p {
    font-family: var(--font-serif);
    font-size: 36px;
    font-style: italic !important;
    color: white;
    line-height: 1.5;
    margin-bottom: 1.5rem;
}

.hero-quote p::after {
    content: '';
    display: block;
    width: 300px;
    height: 2px;
    background: linear-gradient(90deg, #d69e2e 0%, #fbd38d 100%);
    margin: 1.5rem auto 0;
    opacity: 0.6;
    border-radius: 1px;
}

.hero-quote cite {
    font-family: var(--font-sans);
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    background: linear-gradient(90deg, #d69e2e 0%, #fbd38d 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: block;
}

@media (max-width: 768px) {
    .hero-quote p {
        font-size: 24px;
    }

    .hero-quote p::after {
        width: 200px;
    }

    .hero-quote cite {
        font-size: 16px;
    }
}

.hero-with-quote .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

@media (max-width: 768px) {
    .hero-with-quote {
        min-height: 350px;
    }

    .hero-content {
        padding: 3rem 1.5rem;
        min-height: 350px;
    }
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 2rem;
    }

    .hero-subtitle {
        font-size: 1rem;
    }
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
}

.btn-primary {
    background: white;
    color: #805ad5;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

html.dark .btn-primary {
    background: #fbd38d;
    color: #1a202c;
    font-weight: 600;
}

html.dark .btn-primary:hover {
    background: #f6ad55;
    color: #1a202c;
    box-shadow: 0 8px 16px rgba(251, 211, 141, 0.3);
}

.btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
}

.btn-secondary:hover {
    background: white;
    color: #805ad5;
}

html.dark .btn-secondary {
    background: transparent;
    color: #fbd38d;
    border: 2px solid #fbd38d;
}

html.dark .btn-secondary:hover {
    background: #fbd38d;
    color: #1a202c;
}

/* Post Grid & Cards */
.recent-posts {
    padding: 4rem 0;
}

.recent-posts h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
}

.post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.post-card {
    padding: 0;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    transition: all 0.3s ease;
    overflow: hidden;
}

html.dark .post-card {
    background: #2d3748;
    border-color: #4a5568;
}

.post-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
    border-color: #805ad5;
}

html.dark .post-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    border-color: #b794f4;
}

.post-card h3 {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
    line-height: 1.4;
    letter-spacing: 0.01em;
}

.post-card h3 a {
    color: #4a5568;
    text-decoration: none;
}

.post-card h3 a:hover {
    color: #805ad5;
}

html.dark .post-card h3 a {
    color: #f7fafc;
}

html.dark .post-card h3 a:hover {
    color: #b794f4;
}

.post-excerpt {
    color: #718096;
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

html.dark .post-excerpt {
    color: #cbd5e0;
}

.post-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: #4a5568;
    margin-bottom: 1rem;
}

.post-meta time {
    background: transparent;
    color: inherit;
}

/* Reading Time Badge */
.post-meta .reading-time {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.375rem 0.75rem;
    background: linear-gradient(135deg,
            rgba(128, 90, 213, 0.1) 0%,
            rgba(214, 158, 46, 0.1) 100%);
    color: #805ad5;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.8125rem;
    border: 1px solid rgba(128, 90, 213, 0.2);
}

html.dark .post-meta {
    color: #e2e8f0;
}

html.dark .post-meta time {
    background: transparent;
    color: inherit;
}

html.dark .post-meta .reading-time {
    background: linear-gradient(135deg,
            rgba(183, 148, 244, 0.15) 0%,
            rgba(251, 211, 141, 0.15) 100%);
    color: #b794f4;
    border-color: rgba(183, 148, 244, 0.3);
}

.post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: #f7fafc;
    border-radius: 16px;
    font-size: 0.875rem;
    color: #2d3748;
    text-decoration: none;
    transition: all 0.2s ease;
}

html.dark .tag {
    background: #4a5568;
    color: #f7fafc;
}

.tag:hover {
    background: #805ad5;
    color: white;
}

html.dark .tag:hover {
    background: #b794f4;
    color: #1a202c;
}

.view-all {
    text-align: center;
}

/* Tablet breakpoint */
@media (max-width: 1024px) {
    .post-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
}

/* Mobile breakpoint */
@media (max-width: 768px) {
    .post-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .post-card-content {
        padding: 0.875rem;
    }

    .post-card h3 {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .post-card-image {
        aspect-ratio: 16 / 9;
    }
}